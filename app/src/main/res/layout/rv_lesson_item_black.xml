<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="contentDescription"
    android:id="@+id/rowLessonLayoutBlack"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/rv_item_bg_2">

    <TextView
        android:id="@+id/tvLessonDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/gilroy_medium"
        android:textStyle="bold"
        android:textSize="19sp"
        android:padding="8dp"
        android:lineSpacingExtra="8sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/rowLessonLayoutBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgChevronRight"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintEnd_toEndOf="@id/rowLessonLayoutBlack"
        app:layout_constraintTop_toTopOf="@id/rowLessonLayoutBlack"
        app:layout_constraintBottom_toBottomOf="@id/rowLessonLayoutBlack"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_chevron_right"/>


</androidx.constraintlayout.widget.ConstraintLayout>